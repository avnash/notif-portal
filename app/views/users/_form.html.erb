<%= form_for(@user,html:{class:"form-horizontal",role:"form",multipart:true}) do |f|%>   <% if @user.errors.any? %>
	    <% @user.errors.full_messages.each do |msg| %>
	       <div class="alert alert-danger"><%= msg %></div>
	    <% end %>
   <% end %>
	<div class="form-group">
		<%= f.label :nick,class:"col-sm-2 control-label" %>
	<div class="col-md-4">
		<%= f.text_field :nick,class:"form-control" %>
	</div>
	</div>
	<div class="form-group">
		<%= f.label :room,class:"col-sm-2 control-label" %>
	<div class="col-md-4">
		<%= f.text_field :room,class:"form-control" %>
	</div>
	</div>
	<div class="form-group">
		<%= f.label :hostel,class:"col-sm-2 control-label" %>
	<div class="col-md-4">
		<%= f.text_field :hostel,class:"form-control" %>
	</div>
	</div>
	<div class="form-group">
		<%= f.label :email,class:"col-sm-2 control-label" %>
	<div class="col-md-4">
		<%= f.text_field :email,class:"form-control" %>
	</div>
	</div>
        <div class="form-group">
		<%= f.label :contact,class:"col-sm-2 control-label" %>
	   <div class="col-md-4">
	        <%= f.number_field :contact,class:"form-control" %>
	   </div>
	</div>
	 <div class="form-group">
		<%= f.label :avatar,class:"col-sm-2 control-label" %>
	   <div class="col-md-4">
	        <%= f.file_field :avatar,class:"form-control" %>
	   </div>
	</div>
	<div class="form-group">
	   <div class="col-md-4">
		<%= f.submit %>
 	   </div>
	</div>

<% end %>
